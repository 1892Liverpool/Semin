<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.friend.friendv2.ProfileActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:background="@drawable/plavapozadina5"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="2dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilna_user"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/plavapozadina2"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/profile_ime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilna_user"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Palalic Semin"
                    android:textColor="#FFFFFF"
                    android:textSize="26dp" />


                <LinearLayout
                    android:id="@+id/profile_relative_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/profilna_user"
                    android:layout_alignStart="@+id/profilna_user"
                    android:layout_below="@id/profile_ime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/online"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/plavapozadina2"
                        app:civ_border_color="#C0C0C0"
                        app:civ_border_width="5dp" />

                    <TextView
                        android:id="@+id/profile_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:text="Online"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/posaljiZahtjev"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="Add friend" />

                </LinearLayout>

                <!--<ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/plavapozadina" />-->
            </RelativeLayout>

            <TextView
                android:id="@+id/about_profile"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#f1f8ea"
                android:paddingLeft="10dp"
                android:paddingTop="9.5dp"
                android:layout_marginBottom="10dp"
                android:text="About me..."
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fakultet_profile"

                android:layout_marginTop="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon1_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@mipmap/ic_school_black_24dp" />

                    <TextView
                        android:id="@+id/faculty_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/skola_profile"
                android:layout_marginTop="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon2_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@mipmap/ic_school_black_24dp" />

                    <TextView
                        android:id="@+id/school_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High school"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/posao_profile"
                android:layout_marginTop="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon3_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@mipmap/ic_work_black_24dp" />

                    <TextView
                        android:id="@+id/work_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/status_profile"
                android:layout_marginTop="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon4_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@mipmap/ic_favorite_black_24dp" />

                    <TextView
                        android:id="@+id/relationship_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relationship status"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/trenutniGrad_profile"
                android:layout_marginTop="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon5_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@mipmap/ic_home_black_24dp" />

                    <TextView
                        android:id="@+id/currentCuty_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current city"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iz_profile"
                android:layout_marginTop="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon6_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@mipmap/ic_location_on_black_24dp" />

                    <TextView
                        android:id="@+id/hometown_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hometown city"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/post_profile"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:background="#f1f8ea"
                android:paddingLeft="10dp"
                android:paddingTop="9.5dp"
                android:text="Posts"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/postList">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
